# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# MongoDB Configuration
MONGODB_URI=mongodb://mongodb:27017/website_management

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@yourcompany.com

# Company Information
COMPANY_NAME=Your IT Company
COMPANY_EMAIL=support@yourcompany.com
COMPANY_PHONE=+1-234-567-8900

# Billing Configuration
PAYMENT_CYCLE_MONTHS=3
REMINDER_DAYS_BEFORE=10
GRACE_PERIOD_DAYS=10
DEFAULT_PAYMENT_AMOUNT=500

# Uptime Monitoring
UPTIME_CHECK_INTERVAL_MINUTES=10
UPTIME_TIMEOUT_SECONDS=30

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads/payment-proofs
